<?xml version="1.0"?>
<launch>

  <!-- roslaunch arguments -->
  <arg name="debug" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="wait_for_datum" default="false" />
  <!-- Transform from odom to base_footprint (IMU and odometry) -->
  <include file="$(find robot_localization_utils)/launch/robot_localization_odom.launch" />

  <!-- Transform from world to odom (IMU, odometry and GPS) -->
  <include file="$(find robot_localization_utils)/launch/robot_localization_world.launch" />

  <!-- Get GPS odometry -->
  <include file="$(find robot_localization_utils)/launch/navsat_transform_node.launch">
	<arg name="wait_for_datum" value="$(arg wait_for_datum)" />
  </include>

</launch>
